//-
    name: choice
    description: Markup for the choice block
    arguments:
        - {object} props - block properties

mixin choice(data = {})
    .choice&attributes(attributes)
        .container
            .row
                .col-md-6.col-sm-12#woman
                    .choice__panel
                        img(src="./img/forHer.jpg", alt="").choice__image
                        a.choice__link(href="#")
                            p.choice__for= data.for
                            p.choice__text= data.she
                .col-md-6.col-sm-12#man
                    .choice__panel
                        img(src="./img/forHim.jpg", alt="", srcset="./img/forHim@2.jpg 2x").choice__image
                        a.choice__link(href="#")
                            p.choice__for= data.for
                            p.choice__text= data.he