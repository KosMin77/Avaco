//-
    name: header
    description: Markup for the header block
    arguments:
        - {object} props - block properties

mixin header(data = {})
    .header&attributes(attributes)
        #home
        .container
            .row
                .header__main
                    .col-md-6.col-sm-12
                        p.header__subtitle= data.subtitle
                        h1.header__title= data.title
                        hr.header__line
                        p.header__descr= data.descr
                        button.btn.header__shop(type='submit') Shop Now!
                            i(class="fas.fa-shopping-cart")
                        a.header__phone.phone(href="tel:+800.123.45.67")= data.phone
                            i(class="fas.fa-phone-alt")
                    .col-md-6.col-sm-12