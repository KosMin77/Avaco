    name: offer
    description: Markup for the offer block
    arguments:
        - {object} props - block properties

mixin offer(data = {})
    .offer&attributes(attributes)
        .container
            .row
                .offer_slider
                    .offer_slides
                        img(src="../../img/blackBag.jpg", alt="alt")
                        p.descr= data.descr
                    .offer_slides
                        img(src="../../img/redBag.jpg", alt="alt")
                        p.descr= data.descr
                    .offer_slides
                        img(src="../../img/pinkBag.jpg", alt="alt")
                        p.descr= data.descr
                    .offer_slides
                        img(src="../../img/blackBag.jpg", alt="alt")
                        p.descr= data.descr
                    .offer_slides
                        img(src="../../img/redBag.jpg", alt="alt")
                        p.descr= data.descr
                    .offer_slides
                        img(src="../../img/pinkBag.jpg", alt="alt")
